                        },


                        {
                            title: "Role",
                            field: 'july_role_name'
                        }, {
                            title: 'Jul',
                            field: 'july_hour_time'
                        },


                        {
                            title: "Role",
                            field: 'august_role_name'
                        }, {
                            title: 'Aug',
                            field: 'august_hour_time'
                        },


                        {
                            title: "Role",
                            field: 'september_role_name'
                        }, {
